<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    >
    <ImageView android:id="@+id/http_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        />
    <TextView android:id="@+id/http_name_txt"
        android:layout_toRightOf="@id/http_item_image"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="皇家酒店"/>
    
    <TextView android:id="@+id/http_content_txt"
        android:layout_toRightOf="@id/http_item_image"
        android:layout_below="@id/http_name_txt"
        android:textSize="13sp"
        android:singleLine="true"
        android:textColor="@color/color_red"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="180元享受"/>
    
    

    <TextView
        android:id="@+id/http_distance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:gravity="right"
        android:text="12km"
        android:layout_marginBottom="2dp"
        android:textColor="@color/grey"
        android:textSize="11sp" />

    <ImageView android:id="@+id/http_map_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/info_map"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@id/http_distance_txt"/>
    
    <TextView
        android:id="@+id/http_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/http_content_txt"
        android:layout_alignParentBottom="true"
        android:ems="16"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="bottom"
        android:text="地址"
        android:layout_marginBottom="2dp"
        android:textColor="@color/grey"
        android:textSize="11sp" />
    
    <LinearLayout android:id="@+id/http_right_imgae"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/http_right_tuan_image"
            android:src="@mipmap/near_group"
            android:visibility="gone"
            />
        
        <ImageView android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/http_right_quan_image"
            android:src="@mipmap/near_card"
            android:visibility="gone"
            />
        <ImageView android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/http_right_card_image"
            android:src="@mipmap/near_ticket"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>
